<?xml version="1.0" encoding="UTF-8"?>
<server description="test-server">

    <featureManager>
        <!-- Java EE features -->
        <feature>cdi-2.0</feature>
        <feature>ejb-3.2</feature>

        <!-- Rest Interface -->
        <feature>jaxrs-2.1</feature>
        <feature>jsonb-1.0</feature>
        <feature>mpOpenAPI-2.0</feature>


        <!-- Message Driven Bean -->
        <feature>wasJmsClient-2.0</feature>
        <feature>mdb-3.2</feature>
    </featureManager>

    <httpEndpoint httpPort="9080"
                  httpsPort="9443"
                  id="defaultHttpEndpoint"
                  host="*"/>

    <!-- JMS CONFIGURATION -->
    <resourceAdapter id="IBMMQResourceAdapter" location="${server.config.dir}/lib/wmq.jmsra-9.0.4.0.rar">
    </resourceAdapter>

    <jmsQueueConnectionFactory jndiName="jms/queueCF"
                               connectionManagerRef="ConMgr">
        <properties.IBMMQResourceAdapter/>
    </jmsQueueConnectionFactory>

    <connectionManager id="ConMgr" maxPoolSize="10"/>

    <jmsQueue id="jms/test/in/queue"
              jndiName="jms/test/in/queue">
        <properties.IBMMQResourceAdapter PhysicalName="q.test.in"/>
    </jmsQueue>

    <jmsQueue id="jms/test/out/queue"
              jndiName="jms/test/out/queue">
        <properties.IBMMQResourceAdapter PhysicalName="q.test.out"/>
    </jmsQueue>

    <jmsActivationSpec id="open-Liberty-apache-mq-test/ReceiverInMDB">
        <properties.IBMMQResourceAdapter transportType="CLIENT"
                          destinationRef="jms/IVTQueue" destinationType="javax.jms.Queue"
                          hostName="localhost" port="1414"
                          channel="SYSTEM.DEF.SVRCONN" queueManager="LibTest"/>
    </jmsActivationSpec>


</server>